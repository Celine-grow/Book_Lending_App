<h1>Edit Book</h1>

<%= form_with model: @book, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :title %>
    <%= form.text_field :title,class:"form-label", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :author %>
    <%= form.text_field :author,class:"form-label", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :description %>
    <%= form.text_area :description,class:"form-label", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :status %>
    <%= form.select :status, ["available", "borrowed"],class:"form-label" %>
  </div>

  <div class="mb-3">
  <%= form.submit "Update  Book", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Back", books_path,class: "btn btn-primary" %>
